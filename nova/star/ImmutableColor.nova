package "nova/star"

immutable class ImmutableColor {
    visible final Int r
    visible final Int g
    visible final Int b
    
    public construct(Color color) => this(color.r, color.g, color.b)
    public construct() => this(0, 0, 0)
    public construct(Int grayscale) => this(grayscale, grayscale, grayscale)
    public construct(Int r, Int g, Int b) {
        this.r = r
        this.g = g
        this.b = b
    }
}