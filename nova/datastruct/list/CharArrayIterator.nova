package "nova/datastruct/list"

class CharArrayIterator implements Iterator<Char> {
    CharArray array
    
    Int indexSize
    
    visible Int position
    
    visible Bool hasNext {
        get { return array.count > position }
        no set
    }
    
    visible Char next {
        get {
            if (hasNext) {
                return array.get(position++ * indexSize)
            }
            
            throw new NoSuchElementException()

            return 0
        }
        
        no set
    }
    
    public construct(CharArray array, Int indexSize) {
        this.array = array
        this.indexSize = indexSize
        
        reset()
    }
    
    public reset() -> Iterator<Char> {
        position = 0
        
        return this
    }
}